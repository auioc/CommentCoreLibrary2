{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "NodeNext",
        "baseUrl": "src",
        "declarationDir": "dist/dts",
        "outDir": "dist",
        "paths": {
            "@api/*": ["api/*"],
            "@utils/*": ["utils/*"]
        },
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"]
}
